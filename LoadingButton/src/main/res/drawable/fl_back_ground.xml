<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <gradient
                android:type="sweep"
                android:useLevel="false"
                android:startColor="#D99ACB"
                android:centerColor="#A2D4D9"
                android:endColor="#BDAEDB" />
            <size android:width="70dp" android:height="70dp" />
        </shape>
    </item>

    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
        <shape android:shape="oval">
            <stroke android:color="@android:color/white" android:width="3dp"/>
            <solid android:color="#A89C94" />
        </shape>
    </item>
</layer-list>